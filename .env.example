# Application
NEXT_PUBLIC_APP_URL=http://localhost:8000
ENVIRONMENT=development

# Cloudflare (optional - only needed for remote DB operations)
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_D1_DATABASE_ID=your_database_id
CLOUDFLARE_API_TOKEN=your_api_token

# Better Auth (required)
BETTER_AUTH_SECRET=generate-a-secure-random-string-at-least-32-chars
BETTER_AUTH_URL=http://localhost:8000

# Resend Email (required for email features)
RESEND_API_KEY=re_xxxxxxxxxxxx
RESEND_FROM_EMAIL=help@yourdomain.com

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
